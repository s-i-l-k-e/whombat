# =============================================================================
# DOMAIN & PROTOCOL CONFIGURATION
# =============================================================================
DOMAIN=localhost
HTTPS=false

# For production with HTTPS:
# DOMAIN=yourdomain.com
# HTTPS=true
# ACME_EMAIL=admin@yourdomain.com

# =============================================================================
# DERIVED CONFIGURATION (automatically set based on HTTPS)
# =============================================================================
# For HTTP (HTTPS=false):
TRAEFIK_ENTRYPOINT=web
TRAEFIK_TLS=false
TRAEFIK_CERTRESOLVER=
TRAEFIK_REDIRECT_MIDDLEWARE=
NEXT_PUBLIC_BACKEND_HOST=http://localhost/api
NEXTAUTH_URL=http://localhost

# For HTTPS (HTTPS=true):
# TRAEFIK_ENTRYPOINT=websecure
# TRAEFIK_TLS=true
# TRAEFIK_CERTRESOLVER=letsencrypt
# TRAEFIK_REDIRECT_MIDDLEWARE=redirect-to-https
# NEXT_PUBLIC_BACKEND_HOST=https://yourdomain.com/api
# NEXTAUTH_URL=https://yourdomain.com

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
BACKEND_PORT=5000
AUDIO_DIR=/path/to/your/audio
# Backend root path (for reverse proxy)
WHOMBAT_ROOT_PATH=/api

# Database Configuration
DB_URL=sqlite+aiosqlite:////data/whombat.db
# For PostgreSQL:
# DB_URL=postgresql://postgres:password@database:5432/whombat

# PostgreSQL Configuration (if using PostgreSQL)
POSTGRES_DB=whombat
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# =============================================================================
# AUTHENTICATION & SECURITY (SECRETS - REPLACE WITH YOUR VALUES)
# =============================================================================
# Azure AD Configuration
AZURE_AD_BACKEND_CLIENT_ID=your_backend_azure_client_id
AZURE_AD_FRONTEND_CLIENT_ID=your_frontend_azure_client_id
AZURE_AD_CLIENT_SECRET=your_azure_client_secret
AZURE_AD_TENANT_ID=your_azure_tenant_id
AZURE_AD_API_SCOPE=api://your_backend_client_id/Backend:Access

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_generate_new_one

# ACME/Let's Encrypt Email (for HTTPS)
ACME_EMAIL=admin@yourdomain.com